<Window
	x:Class="DirectNXAML.Views.MainWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:local="using:DirectNXAML.Views"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
    Activated="Window_Activated">

	<NavigationView x:Name="MainNavView" ItemInvoked="NavigationView_ItemInvoked">
        <NavigationView.MenuItems>
            <NavigationViewItem Icon="ProtectedDocument" Content="Dx11Renderer" Tag="DirectNPage"/>
            <NavigationViewItem Icon="Page2" Content="Other Page" Tag="OtherPage"/>
		</NavigationView.MenuItems>
		<Frame x:Name="ContentFrame"/>
	</NavigationView>
</Window>
